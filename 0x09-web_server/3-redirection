#!/usr/bin/env bash
# This script installs nginx on a web server
sudo apt-get update
sudo apt-get install -y nginx
sudo service nginx start ubuntu@66.70.184.164
sudo echo 'server {
listen 80 default_server;
server_name localhost;
return 301 http://localhost$requesturi;
}' > /usr/share/nginx/html/redirect_me
sudo service nginx restart ubuntu@66.70.184.164
